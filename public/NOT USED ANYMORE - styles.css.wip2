    background: white;
    color: var(--danger);
    padding: 8px 16px;
    margin-left: 10px;
    font-size: 14px;
}

a {
    color: var(--accent);
    text-decoration: none;
    transition: var(--transition);
    position: relative;
}

a::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -2px;
    left: 0;
    background: var(--accent);
    transition: var(--transition);
}

a:hover::after {
    width: 100%;
  display: inline-block;
}

