/* Modern animated dark theme */
:root {
  --bg-dark: #0a0a0a;
  --bg-darker: #050505;
  --bg-lighter: #1a1a1a;
  --text-primary: #dfdfdf;
  --text-secondary: #bfbfbf;
  --accent: #00b853;
  --accent-hover: #00d676;
  --danger: #ff1744;
  --danger-hover: #ff4081;
  --glow: 0 0 40px rgba(0, 200, 83, 0.4);
  --glow-danger: 0 0 40px rgba(255, 23, 68, 0.4);
  --transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

::selection, ::checked {
    background: var(--accent);     /* Selection background color */
    color: var(--bg-darker);       /* Selected text color */
    text-shadow: none;             /* Remove any text shadow when selected */
}

::-moz-selection {                 /* Firefox requires its own declaration */
    background: var(--accent);
    color: var(--bg-darker);
    text-shadow: none;
}

.hidden {
    display: none !important;
}

body {
    background: var(--bg-dark);
    color: var(--text-primary);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    margin: 0;
    line-height: 1.6;
    position: relative;
}

/* Add this after the body declaration */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 200%;
    height: 100%;
    opacity: 1;
    z-index: -1;
  
    /* background-image: 
        linear-gradient(45deg, var(--text-primary) 1px, transparent 1px),
        linear-gradient(-45deg, var(--text-primary) 1px, transparent 1px);
    background-size: 50px 50px;
   */

    background-image: 
      linear-gradient(45deg, var(--accent) 1px, transparent 1px),
      linear-gradient(-45deg, var(--accent) 1px, transparent 1px);
    background-size: 50px 50px;
  

    animation: slideBackground 120s linear infinite;  /* Slow animation over 60 seconds */
    
    pointer-events: none;
}

/* Add this new keyframe animation */
@keyframes slideBackground {
    from {
        transform: translateX(0);
    }
    to {
        transform: translateX(-50%);  /* Move left by half its width */
    }
}

